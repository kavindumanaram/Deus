
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@model IEnumerable<Deus.Domain.Users.User>

<table class="table" style="margin: 4px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        @*<th>
                    @Html.DisplayNameFor(model => model.ISBN)
                </th>*@
        <th>
            Action
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            @*<td>
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>*@
            <td>
                @Html.ActionLink("Edit", "CreateEditBook", new { id = item.UserId }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Details", "DetailBook", new { id = item.UserId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "DeleteBook", new { id = item.UserId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>